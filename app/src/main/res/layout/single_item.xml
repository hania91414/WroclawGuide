<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_horizontal_padding"
    android:paddingLeft="@dimen/activity_vertical_padding"
    android:paddingRight="@dimen/activity_vertical_padding"
    android:paddingTop="@dimen/activity_horizontal_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/place_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_list_items"
                android:paddingLeft="@dimen/padding_left_list_items"
                android:paddingRight="@dimen/padding_right_list_items"
                android:textColor="@color/tab_background"
                android:textSize="@dimen/place_name_size"
                android:textStyle="bold"
                tools:text="Place Name"
                tools:textColor="@android:color/black"></TextView>

            <TextView
                android:id="@+id/place_adress"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignBottom="@id/place_name"
                android:layout_marginTop="@dimen/adress_item_margin_top"
                android:paddingBottom="@dimen/padding_bottom_list_items"
                android:paddingLeft="@dimen/padding_left_list_items"
                android:textColor="@android:color/white"
                android:textSize="@dimen/adress_size"
                tools:text="Adress"
                tools:textColor="@android:color/black"></TextView>
        </LinearLayout>

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/photo_width"
            android:layout_height="@dimen/photo_height"
            android:layout_marginRight="@dimen/photo_margin_right" />
    </LinearLayout>

</LinearLayout>